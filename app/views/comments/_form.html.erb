<h1><%= @comment.id ? 'Edit Comment' : 'Add Comment' %></h1>
<br />
<div class="ui form">
  <%= form_for [@movie, @comment] do |f| %>
  <div class="field">
  <h3><%= f.label :body %></h3>
  <%= f.text_area :body, required: true %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Submit", :class => 'ui tiny button' %>
  </div>
  <% end %>
</div>
